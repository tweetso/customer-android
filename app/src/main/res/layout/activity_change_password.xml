<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Authentication.ChangePassword"
    android:background="#ccc"
    >

    <EditText
        android:id="@+id/current_password_edit"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Current password"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/new_password_edit"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="50dp"
        android:layout_below="@+id/current_password_edit"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="New password"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/password_problem_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password_edit"
        android:layout_marginTop="10dp"
        android:text=""
        android:paddingLeft="10dp"
        android:textColor="#ff1a1a"
        android:textSize="18dp"
        />

    <Button
        android:id="@+id/save_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_problem_m"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/roundedbutton_black"
        android:text="Save"
        android:textColor="@color/white" />

</RelativeLayout>